{
    "builders": [
        {
            "api_token": "{{user `do_token`}}",
            "image": "{{user `base_image`}}",
            "region": "nyc1",
            "size": "s-2vcpu-4gb",
            "snapshot_name": "{{user `snapshot_name`}}",
            "snapshot_regions": [
                "nyc1"
            ],
            "ssh_username": "root",
            "type": "digitalocean",
            "tags": [
              "{{user `service`}}"
            ]
        }
    ],
    "post-processors": [
        {
            "custom_data": {
                "service": "{{ user `service`}}",
                "snapshot_name": "{{user `snapshot_name`}}"
            },
            "output": "packer-manifest.json",
            "strip_path": true,
            "type": "manifest"
        }
    ],
    "provisioners": [
        {
            "extra_arguments": [
                "--skip-tags=user",
                "--vault-password-file=../.ansible-secret"
            ],
            "groups": [
                "{{user `service`}}"
            ],
            "playbook_file": "../playbook.yml",
            "type": "ansible"
        }
    ],
    "variables": {
        "base_image": "fedora-31-x64",
        "do_token": "{{env `DO_TOKEN`}}",
        "service": "sandbox",
        "snapshot_name": "{{user `service`}}-{{timestamp}}"
    }
}
